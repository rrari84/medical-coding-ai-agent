# .env file - Add your actual credentials

# Server Configuration
PORT=3000
NODE_ENV=development

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=medical_coding_ai

# Optional: Database SSL Configuration (for production)
DB_SSL=false
DATABASE_URL=postgresql://username:password@localhost:5432/medical_coding_ai

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# Session Configuration (if needed)
SESSION_SECRET=your_session_secret_here